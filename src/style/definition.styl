.definition
    position: absolute
    width: 100%
    height: 100%
    background-color #000
    z-index 200
    

    &_container 
        position relative
        display flex
        align-items: center
        width 100%
        height 100%
        opacity: 0

    &_content
        width: 80%
        margin: auto
        display: flex
        flex-flow column nowrap
        align-items: center
        justify-content: space-around

    &_title
        text-align center
        margin-bottom 40px

    &_titleText
        font-family Francesco
        font-size 24px
        line-height 31px
        margin: 0
        font-weight normal
        position: relative

        &::before
            display block
            content ''
            background-color #fff
            height 1px
            width: 25px
            position: absolute
            left: -40px
            top: 50%
            transform: translateY(-50%)

        &::after
            display block
            content ''
            background-color #fff
            height 1px
            width: 25px
            position: absolute
            right: -40px
            top: 50%
            transform: translateY(-50%)
            
    &_items 
        display: flex
        flex-flow: row nowrap
        align-items: center
        justify-content: space-between
        width: 100%

    &_item
        width: 30%
        text-align center
        & span
          font-family Francesco
          height 0
          position relative
          top 40px
          font-size 18px
          display block
          opacity: 0.3
    
    .defCta
        background-color transparent
        border none
        color: #fff
        font-family Francesco
        font-size 100px
        line-height 128px
        cursor: pointer
        position relative
        transition: .4s opacity cubic-bezier(0,.15,0,1)

        &:hover
            opacity: 0.3
