.tutorial
    position: absolute
    bottom: 2%
    right: 2%
    width: 180px
    height: 150px
    z-index 150
    display none

    &_container
        position: relative
        width: 100%
        height: 100%
        display block

    &_item
        position: absolute
        width: 100%
        height: auto
        top: 50%
        left: 50%
        transform: translate(-50%, -50%)
        opacity: 0
        text-align center

        svg
            width: auto
            height: 100%
        
    .keyboardTuto
        svg
            width: 70%
            height: auto


.subtitle
    display none
    position: absolute
    bottom: 7%
    left: 50%
    max-width: 750px
    width: 750px
    z-index 150
    transform: translateX(-50%)

    &_container
        position: relative
        display block
        width: 100%
        height: 100%

    &_item
        position: relative
        width: 100%
        height: 100%
        display block

    &_Title 
        width: 100%
        text-align center
        padding-bottom 40px
        opacity: 0
        
        p
            color: #fff
            font-family Francesco
            font-size 42px
            line-height 54px
            margin: 0
            text-transform capitalize

    &_contentText
        width: 100%
        text-align center
        position: absolute
        bottom: -2%
        left: 50%
        transform: translateX(-50%)
        opacity: 0

        p
            color: #fff
            font-family Francesco
            font-size 24px
            line-height 31px
            margin: 0

