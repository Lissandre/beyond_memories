.open_options
    .options_container
        display flex

    .options
        display none


.options 
    position absolute
    top: 2%
    right: 2%
    z-index: 10

    &_container
        width: 100%
        height: 100%
        position: absolute
        background-color #0000ff
        display none
        align-items: center

        &_close
            position absolute
            top: 2%
            right: 2%

    &_content
        margin auto

    &_mute
        .js_unmuteSound
            display none