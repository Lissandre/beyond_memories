.open_options
    .options_container
        display: flex

    .options
        display none


.options 
    position absolute
    top: 2%
    right: 2%
    z-index: 10

    &_container
        width: 100%
        height: 100%
        position: absolute
        background-color rgba(#262626, 0.95)
        display none
        align-items: center

        &_close
            position absolute
            top: 2%
            right: 2%

        &_replay
            position: absolute
            bottom: 5%
            left: 50%
            transform: translate(-50%, -50%)

    &_content
        display flex
        flex-flow: column nowrap
        justify-content: space-around
        margin auto
        width: 45%

    &_title
        width: 100%
        margin-bottom 125px

        .options_titleText
            font-size 80px
            line-height 105px
            text-align center
    
    &_sounds
        display: flex
        flex-flow: column nowrap

        .sound_item
            display: flex
            flex-flow: row nowrap
            align-items: center
            justify-content: space-between
            margin-bottom 50px

            .sound_object
                width: 30%
            
            label
                text-align right
                font-size 24px
                line-height 31px
            
            .slider
                -webkit-appearance: none;
                background-color #c4c4c4
                height: 1px

            .slider::-webkit-slider-thumb
                -webkit-appearance: none;
                width: 15px
                height: 15px
                border-radius: 50%
                background-color #c4c4c4
                box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.85);
                cursor pointer


    &_mute
        .js_unmuteSound
            display none

 .options_replayCta
    background-color transparent
    border none
    color #fff
    position relative
    font-size 24px
    line-height 31px

    &::before
        display block
        content ''
        background-color #fff
        height 1px
        width: 25px
        position: absolute
        left: -40px
        top: 50%
        transform: translateY(-50%)

    &::after
        display block
        content ''
        background-color #fff
        height 1px
        width: 25px
        position: absolute
        right: -40px
        top: 50%
        transform: translateY(-50%)


.optCTA
    border: none
    background-color transparent

.js_optionsBtn
    svg 
        width: 15px
        height: auto
    
