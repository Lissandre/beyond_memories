.open_options
    .options_container
        display: flex

    .options
        display none


.options 
    position fixed
    top: 2%
    right: 2%
    z-index: 400
    opacity: 0

    &_container
        width: 100%
        height: 100%
        position: absolute
        display none
        align-items: center
        z-index 250

        &_close
            position fixed
            top: 2%
            right: 2%
            display: flex
            flex-flow: row-reverse nowrap
            align-items: center

        &_replay
            opacity: 0
            position: absolute
            bottom: 5%
            left: 50%
            transform: translate(-50%, -50%)

    &_content
        display flex
        flex-flow: column nowrap
        justify-content: space-around
        margin auto
        width: 45%

    &_title
        width: 100%
        margin-bottom 125px

        .options_titleText
            font-size 80px
            line-height 105px
            text-align center
            font-family Francesco
            font-weight normal
            margin: 0
            opacity: 0
    
    &_sounds
        display: flex
        flex-flow: column nowrap
        opacity: 0

        .sound_item
            display: flex
            flex-flow: row nowrap
            align-items: center
            justify-content: space-between
            margin-bottom 50px

            .sound_object
                width: 30%
            
            label
                text-align right
                font-size 24px
                line-height 31px
                font-family Francesco

            .volumeText
                font-size 24px
                line-height 31px
                font-family Francesco
            
            .slider
                -webkit-appearance: none;
                background-color #c4c4c4
                height: 1px

            .slider::-webkit-slider-thumb
                -webkit-appearance: none;
                width: 15px
                height: 15px
                border-radius: 50%
                background-color #c4c4c4
                box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.85);
                cursor pointer

            .slider:disabled::-webkit-slider-runnable-track
                -webkit-appearance: none;
                background-color #4d4d4d
                height: 1px

            .slider:disabled::-webkit-slider-thumb
                -webkit-appearance: none;
                background-color #4d4d4d
                transform: translateY(-50%)
                box-shadow: 0px 0px 0px 0px rgba(0,0,0,0);
                cursor default

    &_mute
        .js_unmuteSound
            display none

 .options_replayCta
    background-color transparent
    border none
    color #fff
    position relative
    font-size 24px
    line-height 31px
    font-family Francesco
    cursor: pointer

    &::before
        display block
        content ''
        background-color #fff
        height 1px
        width: 25px
        position: absolute
        left: -40px
        top: 50%
        transform: translateY(-50%)

    &::after
        display block
        content ''
        background-color #fff
        height 1px
        width: 25px
        position: absolute
        right: -40px
        top: 50%
        transform: translateY(-50%)

.sound_mute
    margin-right 20px
    opacity: 0
    .js_unmuteSound
        display none
        padding-right 10px
        svg
            height: 18px

    .muteCta
        background-color transparent
        border none
        cursor pointer

.optCTA
    border: none
    background-color transparent
    cursor: pointer

.js_optionsBtn
    svg 
        width: 15px
        height: auto
    
.js_closeDivOpton
    svg 
        width: 20px
        height: auto

.bubbleOptions
  display block
  position: absolute
  top: 0
  right: 0
  width: 10px
  height: 10px
  border-radius 50%
  background-color #000
  z-index 50
  transform: scale(0)

.blobOption
    position:  absolute
    z-index -1
    left: 50%
    top: 50%
    transform: translate(-50%, -50%)
    opacity: 0