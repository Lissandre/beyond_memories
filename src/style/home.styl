.home
    position: absolute
    width: 100%
    height: 100%
    display flex
    align-items: center

    &_container
        width: 60%
        margin: auto
    
    &_logo 
        width: 100%
        text-align center

    &_title 
        font-family Francesco
        text-transform uppercase
        font-weight normal
        font-size 120px
        margin: 0
        margin-bottom 40px
        text-shadow: 0px 0px 40px rgba(38,38,38,0.5);

    &_desc
        font-family Francesco
        font-size 24px
        line-height 31px
        position: relative
        display inline
        text-shadow: 0px 0px 40px rgba(38,38,38,0.5);

        &::before
            display block
            content ''
            background-color #fff
            height 1px
            width: 25px
            position: absolute
            left: -40px
            top: 50%
            transform: translateY(-50%)

        &::after
            display block
            content ''
            background-color #fff
            height 1px
            width: 25px
            position: absolute
            right: -40px
            top: 50%
            transform: translateY(-50%)

    &_buttons
        position: absolute
        bottom: 5%
        left: 50%
        transform: translateX(-50%)
        width: 350px
        display: flex
        flex-flow: row nowrap
        align-items: center
        justify-content: space-around
    
    .homeCta
        background-color transparent
        border none
        color: #fff
        width: fit-content
        text-align center
        text-transform capitalize
        font-family Francesco
        font-size 24px
        line-height 31px
        cursor: pointer
        position: relative

        &:hover
            &::after
                transform: scaleX(1)

        &::after
            content: ''
            display block
            position absolute
            bottom: 0
            width: 100%
            height: 2px
            background-color #fff
            transform: scaleX(0)
            transition: .3s ease-in-out