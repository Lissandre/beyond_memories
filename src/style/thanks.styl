.thanks
    position: absolute
    width: 100%
    height: 100%
    background-color #000
    z-index: 1000
    display none
    opacity: 0
    align-items: center

    &_container
        position: relative
        width: 100%
        display flex
        flex-flow: column nowrap
        align-items: center

    &_title
        width: 100%
        text-align center
        margin-bottom 80px
        opacity: 0

    &_titleText
        font-family Francesco
        font-size 80px
        line-height 100px
        color: #fff
        margin: 0
        text-transform uppercase

        span 
            display block
            text-transform lowercase
            font-size 24px  
            line-height 31px
    
    &_credits
        display block
        width: 50%
        margin-bottom 80px

    &_creditsTitle
        width: 100%
        text-align center
        font-size 24px
        line-height 31px
        color: #fff
        font-family Francesco
        opacity: 0

    &_names
        display flex
        flex-flow: row nowrap
        align-items: center
        justify-content: space-between
        text-align center

    &_name
        width: calc(100%/4)
        text-align center
        font-size 24px
        line-height 31px
        color: #fff
        font-family Francesco
        opacity: 0

    &_refresh
        width: 100%
        text-align center
        position: absolute
        bottom: 2%
        opacity: 0

    &_button
        background-color transparent
        border none
        font-size 18px  
        line-height 31px    
        color: #fff
        font-family Francesco

    


