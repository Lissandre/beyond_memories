html, body
  margin 0
  padding 0
  overflow hidden

canvas
  width 100%
  height 100%
  outline none

.speechText
  position absolute
  width 85%
  text-align center
  font-size 2rem
  color: #FFF
  -webkit-text-stroke-width: 1px;
  -webkit-text-stroke-color: black;
  opacity 0
  bottom 30px
  left 50%
  transform translateX(-50%)
  transition 1s ease-in-out

