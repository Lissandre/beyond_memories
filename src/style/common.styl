html, body
  margin 0
  padding 0
  overflow hidden
  color: #fff

canvas
  width 100%
  height 100%
  outline none


.videoIntro
  // display none
  position: absolute
  top: 50%
  transform: translateY(-50%)
  width: 100%
  height: auto

.videoContainer
  position: absolute
  width: 100%
  height: 100%
  background-color #000
  transition: 1s ease-in-out 
  z-index 100
  opacity: 0 

.videoButton
  position: absolute
  bottom: 5%
  left: 50%
  transform: translateX(-50%)

.videoCta
  position: relative
  background-color #000
  padding: 0px 15px
  border-radius: 10%
  border none
  color #fff
  font-family Francesco
  font-size 24px
  margin: 0
  cursor: pointer
  text-shadow: 0px 0px 20px rgba(38,38,38,0.5);