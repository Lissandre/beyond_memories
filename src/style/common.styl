html, body
  margin 0
  padding 0
  overflow hidden
  color: #fff

canvas
  width 100%
  height 100%
  outline none


.videoIntro
  // display none
  position: absolute
  top: 50%
  transform: translateY(-50%)
  width: 100%
  height: auto

.videoContainer
  position: absolute
  width: 100%
  height: 100%
  background-color #000
  transition: 1s ease-in-out 
  z-index 100
  opacity: 0 
