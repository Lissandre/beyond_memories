html, body
  margin 0
  padding 0
  overflow hidden
  position relative

canvas
  width 100%
  height 100%
  outline none

.speechText
  position absolute
  width 85%
  text-align center
  font-size 2rem
  color: #FFF
  -webkit-text-stroke-width: 1px;
  -webkit-text-stroke-color: black;
  opacity 0
  bottom 30px
  left 50%
  transform translateX(-50%)
  // transition 1s ease-in-out

.options 
  position absolute
  top: 2%
  right: 2%

// Inventory style
.open_inventory
  .inventory_container
    display flex

.inventory 
  position absolute
  bottom: 5%
  left: 2%

.inventory_container
  width: 100%
  height: 100%
  position: absolute
  background-color #BCBCBC
  display none
  align-items: center

  &_close
    position absolute
    top: 2%
    right: 2%

.inventory_content
  margin auto

.inventory_content_items
  display flex
  flex-flow row nowrap
  align-items: flex-start
  justify-content: space-between

  &_item
    width: 300px
    height: 500px
    border: 2px solid white
    padding: 20px 40px
    border-radius: 20px
    display: flex
    flex-flow column nowrap
    align-items: center
    justify-content: space-around

  .item_pic
    width: 100%
    height: 300px
    overflow: hidden

    img
      width: 100%

  .item_texts
    text-align center


.js_canvasResult
  position: absolute
  bottom: 200%
  display none