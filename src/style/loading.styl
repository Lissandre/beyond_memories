.loadScreen
  position absolute
  top 0
  width 100%
  height 100%
  background-color #000
  display flex
  flex-direction column
  justify-content center
  align-items center
  transition 0.55s opacity ease-out

.load
  margin 0 0 30px 0
  padding 0
  color #fff
  font-family Montserrat
  user-select none

.progressBar
  border-radius 8px
  width 300px
  background-color #232323

.progress
  border-radius 8px
  width 0px
  height 7px
  background-color #fff
  transition 0.32s ease-out width
