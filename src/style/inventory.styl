// Inventory style
random(min,max)
  return floor(math(0, 'random')*(max - min + 1) + min)

.open_inventory
  .inventory_container
    display flex

.inventory
  position fixed
  bottom: 5%
  left: 2%
  overflow: scroll

::-webkit-scrollbar
  display: none

.inventory_container
  min-width: 100%
  height: 100%
  position: absolute
  background-color #000000
  display none
  align-items: center
  &_close
    position fixed
    top: 5%
    right: 2%

.inventory_content
  margin auto

.inventory_content_items
  display flex
  flex-flow row nowrap
  align-items: flex-start
  justify-content: space-between

.inventory_container_screenShot
  display none

for num in (1..8)
  .inventory_content_items_item:nth-child({num})
    width: 400px
    margin: 0 25px
    display: flex
    flex-flow column nowrap
    align-items: center
    justify-content: space-around
    transition 0.3s ease transform
    &:hover
      transform scale(1.05)
      & img
        transform rotate(0deg)
    & img
      width 100%
      transform rotate(random(-3, 3) deg)
      transition 0.3s ease transform
      
