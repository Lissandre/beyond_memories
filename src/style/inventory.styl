// Inventory style
random(min,max)
  return floor(math(0, 'random')*(max - min + 1) + min)

.open_inventory
  .inventory_container
    display flex

.inventoryButton
  position fixed
  bottom: -1%
  left: -1%
  z-index 100
  height: 100px
  width: 150px
  z-index 300
  opacity: 0
  // overflow: scroll

  &_container
    position relative
    width: 100%
    height: 100%

    &:hover
      .circle
        transform: scale(1.1)

      .card1
        transform: rotate(-45deg)
        left: 2%
        top: 45%

      .card2
        transform: rotate(-20deg) translateY(-10px)
        top: 30%

      .card3
        transform: rotate(20deg)
        left: 40%

    .circle
      position: absolute
      top: -20%
      left: -25%
      transition: .3s cubic-bezier(0,.15,0,1)
      z-index 50

  .js_closeInventory
      position: absolute
      left: 15%
      top: 30%
      margin: 0
      background-color transparent
      border: none
      font-size 24px
      line-height 31px
      font-family Francesco
      color #fff
      text-transform uppercase
      opacity: 0
      z-index 500
      cursor pointer
      display none


    &_cards
      z-index 100
      background-color transparent
      border none
      overflow visible
      width: 150px
      height: 100px
      cursor: pointer
      transform: rotate(20deg)
      position: relative

      .card1,
      .card2,
      .card3
        transform-origin center
        position: absolute
        width: 50px
        box-shadow: 0px 5px 10px 0px rgba(0,0,0,0.4);
        margin: 0
        transition: .3s cubic-bezier(0,.15,0,1)

      .card1
        left: 5%
        top: 40%
        transform rotate(-35deg)
        z-index: 10

      .card2
        left: 20%
        top: 25%
        transform rotate(-10deg)
        z-index: 8

      .card3
        left: 35%
        top: 40%
        transform rotate(10deg)
        z-index: 6

::-webkit-scrollbar
  display: none

.inventory_container
  min-width: 100%
  height: 100%
  position: absolute
  // background-color #000000
  display none
  align-items: center
  z-index 200

.inventory_content
  margin auto

.inventory_content_items
  display flex
  flex-flow row nowrap
  align-items: flex-start
  justify-content: space-between
  transition .69s ease transform
  padding-left 250px
  &_item
    position relative
    & button
      font-family Francesco
      opacity 0
      position absolute
      top 0
      left -2%
      height 100%
      width 105%
      border none
      background rgba(0, 0, 0, 0.3)
      border-radius 30px
      color #fff
      font-size 32px
      transition 0.42s ease opacity

.inventory_container_screenShot
  display none

for num in (1..8)
  .inventory_content_items_item:nth-child({num})
    width: 300px
    margin: 0 25px
    display: flex
    flex-flow column nowrap
    align-items: center
    justify-content: space-around
    // transition 0.3s ease transform
    &:hover
      transform scale(1.05)
      & img
        transform rotate(0deg)
      & button
        cursor pointer
        opacity 1
    & img
      width 100%
      transform rotate(random(-3, 3) deg)
      transition 0.3s ease transform

.bubbleInventory
  display block
  position: absolute
  bottom: 0
  left: 0
  width: 10px
  height: 10px
  border-radius 50%
  background-color #000
  z-index 50
  transform: scale(0)